<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#000"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
   <item android:top="1dp" android:bottom="1dp" android:right="1dp"> 
