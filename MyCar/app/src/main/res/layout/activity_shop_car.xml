<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/gray_lighter"-->
    <!--android:paddingBottom="@dimen/y30">-->

    <LinearLayout
        android:id="@+id/ll_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:paddingLeft="@dimen/x24"
            android:background="@color/red"
            android:paddingRight="@dimen/x24">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:text="实体产品订单满88包邮"
                android:textColor="@color/white"
                android:textSize="@dimen/x26" />

            <TextView
                android:id="@+id/tv_delete_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/y5"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/y5"
                android:gravity="center_vertical"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="@dimen/y30" />
        </RelativeLayout>

        <ListView
            android:id="@+id/rv_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_buttom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y132"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/x64"
        android:paddingRight="@dimen/x24">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            >
        <CheckBox
            android:id="@+id/Cb_checekd"
            android:layout_width="@dimen/y35"
            android:layout_height="@dimen/y35"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_cb_white_arrow"
            android:checked="false" />
        <LinearLayout
            android:id="@+id/ll_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/y26" />
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/red"
            android:gravity="center"
            android:text="结算"
            android:textColor="@color/white"
            android:textSize="@dimen/y26" />
    </RelativeLayout>

    <!--</ScrollView>-->
</RelativeLayout>